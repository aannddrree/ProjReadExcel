@model IEnumerable<ProjReadExcel.Web.Data.FileReceived>

@{
    ViewData["Title"] = "Index";
}

<h1>Arquivos</h1>

<p>
    <a asp-action="Create">Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileDescription)
            </td>
            <td>
               <a asp-action="Import" asp-route-id="@item.Id">Importar</a>
            </td>
        </tr>
}
    </tbody>
</table>
